<?php // -*- encoding:utf-8 -*-

class Article {

    protected $record = array();
    private static $read_properties = array('user_id',
                                            'user_name',
                                            'title',
                                            'body');

    private static $write_properties = array('user_id',
                                             'user_name',
                                             'title',
                                             'body');

    public function __construct($record)
    {
        $this->record = $record;
    }

    protected function __set($name)
    {
        if(array_search($name, self::$write_properties) !== false)
        {
            $this->record[$name] = $value;
        }
    }

    protected function __get($name)
    {
        return $this->record[$name];
    }

    protected function findAll($offset = 0, $limit = self::FIND_LIMIT)
    {
    }
}